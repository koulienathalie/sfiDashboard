# IP/Hostname du serveur (accessible depuis le réseau)
SERVER_IP=192.168.1.100
SERVER_HOSTNAME=sfi-monitoring

# Ports
BACKEND_PORT=3001
FRONTEND_PORT=80
# FRONTEND_PORT_SSL=443

# Frontend URLs
VITE_API_URL=http://${SERVER_IP}:${BACKEND_PORT}
VITE_BACKEND_WS_URL=ws://${SERVER_IP}:${BACKEND_PORT}
VITE_ENV=production

# Backend URLs (CORS)
FRONTEND_URL=http://${SERVER_IP} http://${SERVER_HOSTNAME}

# Node environment
NODE_ENV=production

# SSL (optionnel)
# SSL_CERT=/etc/ssl/certs/sfi-monitoring.crt
# SSL_KEY=/etc/ssl/private/sfi-monitoring.key
